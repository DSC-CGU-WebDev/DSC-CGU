{
  "hosting": [
    {
      "target": "user",
      "public": "build",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**",
        "**/admin/**",
        "**/admin_build/**",
        "**/public/**",
        "**/src/**",
        "**/debug.log**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "admin",
      "public": "admin/build",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**",
        "**/public/**",
        "**/src/**",
        "**/build/**",
        "**/debug.log**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  ],
  "functions": {
    "predeploy": ["npm --prefix \"$RESOURCE_DIR\" run lint"]
  }
}
